<h6 class='product_card'><i class="material-icons">sort</i> Filter by Category</h6>

<% @categories.each do |category| %>
<div class='collection-item'>
<%= link_to category.name, fetch_products_path(:category_id => category.id), :remote => true, :class => "waves-effect waves-light btn red accent-2 more_info" %>
</div>
<% end %>
<a href= "/products" class="waves-effect waves-light btn black-text grey lighten-1 more_info">All Products</a>
