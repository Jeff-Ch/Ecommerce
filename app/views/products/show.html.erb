<div class='row'>
	<div class="col s4">
		<img src="<%= @product.url %>" width=350px height=350px alt = "<%= @product.name %>">
	</div>
	<div class='col s7'>
		<h5><%= @product.name %></h5>
		<p class= 'product_info'><%= @product.description %></p>
		<form action = '/carts/update' method = 'post'>
			<div class='row'>
				<p class= 'product_info col s3'>Price: $ <%= @product.price %></p>
				<div class="input-field col s2">
					<select name = 'quantity'>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
					</select>
					<label>Quantity:</label>
				</div>
			</div>
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			<input type = 'hidden' name = 'id' value='<%= @product.id %>'>
			<div class = "links">
				<button class="btn waves-effect waves-light" type="submit" name="action">Add to Cart
					<i class="material-icons right">shopping_cart</i>
				</button>
				<a class="waves-effect waves-light btn" href='/products'>Back to Products</a>
			</div>
		</form>
	</div>
</div>

<script>
$(document).ready(function() {
	$('select').material_select();
});
</script>