<div class='row'>
	<div class="col s4">
		<img src="<%= @product.url %>" width=350px height=350px alt = "<%= @product.name %>">
	</div>
	<div class='col s7'>
		<h5><%= @product.name %></h5>
		<p class= 'product_info'><%= @product.description %></p>
		<form action = '/carts/update' method = 'post'>
			<div class='row'>
				<p class= 'product_info col s3'>Price: $ <%= @product.price %></p>
				<div class="input-field col s1">
					<select class='style2' name = 'quantity'>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
					</select>
					<label>Quantity:</label>
				</div>
				<div class='col s2 style'>
					<button class="btn waves-effect waves-light style3" type="submit" name="action"><i class="material-icons">add_shopping_cart</i>
					</button>
				</div>
			</div>
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			<input type ='hidden' name ='origin' value='info'>
			<input type = 'hidden' name = 'id' value='<%= @product.id %>'>
		</form>
		<div class='row'>
			<div class= 'col s2 push-s2'>
		<a class="waves-effect waves-light btn style4" href='/products'><i class="material-icons">reply</i></a>
	</div>
	</div>
	</div>
</div>

<script>
$(document).ready(function() {
	$('select').material_select();
});
</script>